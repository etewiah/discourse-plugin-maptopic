<div class="container">


<div class="row">  
  <h1 style="margin-bottom:10px;font-size: x-large;font-weight:normal;line-height: 40px;">

    Recent conversations about {{ simple-dropdown selectionItemsBinding='citySelectionItemsWithUrls' action='cityChanged' newLocationAction='showAddCityModal' currentSelectionItem=currentCitySelection }}

{{!-- {{#if isAdmin}}
{{/if}}
 --}}
<span style="margin-left:7%">
            <button class='btn btn-large btn-primary' style="background: #090;" {{action showNewTopicModal currentCitySelection 'info'}}>
            Add city tips
          </button>
          <button class='btn btn-large btn-primary' style="background: #090;" {{action showNewTopicModal currentCitySelection 'question'}}>
            Ask for information
          </button>
</span>

  </h1>



</div>




  <div class='container'>
    {{custom-html "top"}} {{Discourse.globalNotice}} {{discourse-banner user=currentUser banner=Discourse.banner}}

    <div class="row">
      <div class="full-width">
        <div id='header-list-area'>
{{!--           <div class="alert alert-info" style="font-weight: normal;">Click any marker to see what is being said or click anywhere on the map to start a conversation.

          </div> --}}
          {{ outlet }}
        </div>
      </div>
    </div>
  </div>

  <div class='list-controls'>
    <div class="container">
      {{! outlet navigation-bar}}
    </div>
  </div>

  <div {{bind-attr class="loadingSpinner::hidden" }}>
    <div class='spinner'>{{i18n loading}}</div>
  </div>



</div>
