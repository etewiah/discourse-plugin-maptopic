<div class="modal-body">
  <div>

  </div>

  <div>
    {{#if googlePlaceDetails}}
    <h4 style="text-align: center;">Details from Google Places:</h4>
    <div style="width: 49%;float: left;">
      <div style="padding-bottom: 20px;">{{ model.location.address}}</div>
      
      {{#if googlePlaceDetails.website }}
        website: <a {{ bind-attr href=googlePlaceDetails.website }} > {{ googlePlaceDetails.website }} </a>
      {{/if}}
      
    </div>
    <div style="width: 49%;float: left;">
      <img {{ bind-attr src=primaryImageUrl }}>
    </div>
    {{else}}


    {{#if nearbyPlacesDetails}}
    <div>
      <h3 style="margin-bottom: 2%;margin-top: 2%;" >Places nearby:</h3>
    </div>
    <div>
        <ul class="nav list-stacked" style="padding: 5px 5px 5px 5px;">
          {{#each place in nearbyPlacesDetails}}
              <li>
              <a style="padding-left: 5px;" {{action searchResultSelected place}}>
              <div style="width: 77%;float: left;">
              <span>{{ place.name }},</span>
              <span>{{ place.vicinity }},</span>
              </div>
              <button class='btn btn-primary' style="" 
              title="Do you have something to say about this place? Go on then, say it..."
              >
                {{fa-icon comment-o label="talk label" }} This is it
              </button>
              </a> 
              
              </li>
            {{/each}}
          </ul>

    </div>
    {{/if}}
