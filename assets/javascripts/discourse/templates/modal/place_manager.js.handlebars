      <div> <ul>
      {{#each place in nearbyPlacesDetails}}
        <li>
          {{ place.name }}, {{ place.vicinity }}
        </li>
      {{/each}}

      </ul> </div> --}}

  <button class='btn btn-primary' {{action searchForLocation model.location }}>
    Search for more info about this place
  </button>


     {{/if}}
  </div>
</div>

