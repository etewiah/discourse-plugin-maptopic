<div class="modal-body">
  <div>
  </div>

  <div>
    <h style="padding-bottom: 20px;">{{ model.clickedLocation.formatted_address }}</h>
    <div>
      
      <br>
                {{text-field placeholder="Place Name" value=placeName 
                id="place-name" autofocus="autofocus"}}
      
                    <button class='btn btn-primary' style="width:22%;" 
              title="talk.."
              {{action namedCitySelected }}>
                {{fa-icon comment-o label="talk label" }} Talk about this
              </button>
    </div>
    {{#if nearbyPlacesDetails}}
    <div>
      Nearby places:
    </div>
    <div>
        <ul class="list-stacked">
          {{#each place in nearbyPlacesDetails}}
              <li>
              <a style="width: 70%;float: left;" {{action searchResultSelected place}}>
              <span>{{ place.name }},</span>
              <span>{{ place.vicinity }},</span>
              </a> 
              <button class='btn btn-primary' style="margin-top:1%;width:22%;float: right;display: inline-table;" 
              title="talk.."
              {{action searchResultSelected place}}>
                {{fa-icon comment-o label="talk label" }} Talk about this
              </button>
              </li>
            {{/each}}
          </ul>

      <ul class="">
        {{#each place in nearbyPlacesDetails}}

            <li>
            <div style="width: 70%;" {{action searchResultSelected place}}>
            <span>{{ place.name }},</span>
            <span>{{ place.vicinity }},</span>
            </div> 
            <a class='icon expand' style="width:22%;display: inline-table;" href='#' 
            title="talk.."
            {{action searchResultSelected place}}>
              {{fa-icon comment label="talk label" }} Talk about this
            </a>
            </li>

        {{/each}}

      </ul>
    </div>
    {{/if}}
  </div>
</div>

<div class="modal-footer">
  <a {{action closeModal}}>{{i18n cancel}}</a>
</div>
