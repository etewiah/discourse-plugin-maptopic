<div class="row" style="float: left;width: 100%;">

{{#if model.isLocationTopic}}

    {{#if model.hasLocation}}
      <div class="row" style="float: left;width: 100%;">
      <div>
          <h2 style="line-height: 32px;margin-bottom:5px;">
{{!--           <small>Conversation started with : </small>
 --}}                <button class='btn btn-primary btn-klavado' style="float:none" {{action showLocationSelector}}>
                  Add more places
                </button>
            {{#if details.can_edit}}
      {{!--  --}}
            {{/if}}

        </h2>
      </div>
      </div>

      <div class="row" style="float: left;width: 100%;">
        
      {{ topics-map  markerSelectedAction="showPlaceDetails" mapClickedAction="replyWithLocation" markerValues=model.markers activePostBinding="controller.activePost" mapsClass="short-maps" }} 
      </div>

    {{else}}
      <div class="row" style="float: left;width: 100%;">
      <div>
          <h2 style="line-height: 32px;margin-bottom:5px;">
          <small> </small>
                <button class='btn btn-primary btn-klavado' style="float:none" {{action showLocationSelector}}>
                  Add places to this conversation
                </button>
            {{#if details.can_edit}}
      {{!--  --}}
            {{/if}}

        </h2>
      </div>
      </div>

      <div class="row" style="float: left;width: 100%;">
        
          {{ topics-map showSearchBox=false 
           markerSelectedAction="showPlaceDetails" mapClickedAction="replyWithLocation" 
           markerValues=model.markers activePostBinding="controller.activePost" mapsClass="short-maps"
            geo=model.geo
          }}

      </div>

    {{/if}}

{{else}}
    <div class="row" style="float: left;width: 100%;">
    <div>
        <h2 style="line-height: 32px;margin-bottom:5px;">
        <small> </small>
              <button class='btn btn-primary btn-klavado' style="float:none" {{action showLocationSelector}}>
                Put this conversation on the map
              </button>

      </h2>
    </div>
    </div>

{{/if}}

              <button class='btn btn-primary btn-klavado' style="float:none" {{action showInvite}}>
                Invite your friends
              </button>
</div>