<div class="container">

  <h2 style="text-align:center;margin:10px;font-size: x-large;font-weight:normal;line-height: 40px;">
    Map overview of conversations
  </h2>

  <div style="display: inline-block;width:100%;">
    <div style="margin-bottom:10px;">
      <button class="ember-view btn btn-primary create standard" {{action startConversation }} title="begin a conversation about this gig">
        <i class="fa fa-plus"></i>Start a conversation</button>
    </div>
  </div>

  <div class='container'>
    {{custom-html "top"}} {{Discourse.globalNotice}} {{discourse-banner user=currentUser banner=Discourse.banner}}
  </div>

  <div class='list-controls'>
    <div class="container">
      {{! outlet navigation-bar}}
    </div>
  </div>

  <div {{bind-attr class="loadingSpinner::hidden" }}>
    <div class='spinner'>{{i18n loading}}</div>
  </div>


  <div {{bind-attr class=":container :list-container loadingSpinner:hidden" }}>
    <div class="row">
      <div class="full-width">
        <div id='header-list-area'>
          {{outlet header-list-container}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="full-width">
        <div id='list-area'>
          {{outlet list-container}}
        </div>
      </div>
    </div>
  </div>








</div>
