

<div class='container'>
  <div class="row">
    <div class="full-width">
    <button {{action clearLsGeoKeys}} >Clear geo_keys in localstorage</button>
    </div>
  </div>

  <div class="row">
    <div class="full-width">

      <div id='left-manage-panel' style="width: 49%;float: left;">
        <h4>User values</h4>
        <span class="" tabindex="1">
          <ul class="nav nav-stacked">

            {{#each item in citySelectionItemsWithUrls }}
            <li {{ bind-attr class=item.class }}>
            <a style="">{{ item.displayString }}

            <span class='icon expand' style="float: right;background-color: red;" 
            {{action "removeUserGeoKey" item}}>
              {{fa-icon trash-o label="trash label" }}
            </span>
            </a>
            </li>
            {{/each}}
          </ul>
        </span>
      </div>



      <div id='last-manage-panel' style="width: 49%;float: left;padding-left:2%">
        <h4>Server values</h4>
        <span class="" tabindex="2">
          <span class="dd-current" style="min-width: 50px;display: inline-block;">
            {{ currentSelectionItem.displayString }}</span>
          <ul class="nav nav-stacked">
            {{#each item in content }}
            <li {{ bind-attr class=item.class }}>
            <a>{{ item.display_name }} ( {{item.show_criteria }} )</a>
            </li>
            {{/each}}
          </ul>
        </span>
      </div>


      <div id='right-manage-panel' style="width: 49%;float: left;">
        <h4>Server values</h4>
        <span class="" tabindex="2">
          <span class="dd-current" style="min-width: 50px;display: inline-block;">
            {{ currentSelectionItem.displayString }}</span>
          <ul class="">
            {{#each item in serverGeoKeys }}
            <li {{ bind-attr class=item.class }}><a {{ bind-attr href=item.url }} {{ bind-attr data-val=item.value }}>{{ item.displayString }}</a>
            </li>
            {{/each}}
          </ul>
        </span>
      </div>


    </div>
  </div>
</div>
